<view><view class="input-box"><view class="input-item"><view class="input-label" style="margin-top:20rpx;font-size:35rpx;">手机号</view><view class="input-body"><input class="input" style="margin-right:160rpx;" maxlength="11" type="number" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/><button class="btn-code" disabled="{{!isCanSendCode}}" data-event-opts="{{[['tap',[['sendCode',['$event']]]]]}}" bindtap="__e">{{sendMsg}}</button></view></view><view class="input-item"><view class="input-label" style="margin-top:20rpx;font-size:35rpx;">密码</view><view class="input-body"><input class="input" style="margin-right:50rpx;" type="text" password="{{isHidePassword?true:false}}" placeholder="请输入密码" maxlength="20" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/><image class="eye" src="{{isHidePassword?'/static/img/attention.png':'/static/img/attention_forbid.png'}}" data-event-opts="{{[['tap',[['isHidePasswordClick',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="input-item"><view class="input-label" style="margin-top:20rpx;font-size:35rpx;">确认密码</view><view class="input-body"><input class="input" placeholder="请再次输入密码" type="text" maxlength="6" password="true" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/></view></view></view><button data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="button" bindtap="__e">注册</button></view>